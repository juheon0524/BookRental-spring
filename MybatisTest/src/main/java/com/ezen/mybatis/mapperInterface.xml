<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ezen.mybatis.mapperInterface">
  <select id="selectOne" resultType="com.ezen.mybatis.MemberVO" parameterType="int">
    select * from mybatis where id = #{id}
  </select>
  <!-- select는 resultType이 필수이다. -->
  
   <insert id="insertMember" parameterType = "com.ezen.mybatis.MemberVO" >
      insert into mybatis (id, name, phone, address) values (
        #{id}, #{name}, #{phone}, #{address}
      )
  </insert>
  
  <select id="selectAll" resultType = "com.ezen.mybatis.MemberVO">
  	select * from mybatis order by id
  </select>
  
  <delete id="deleteMember">
  delete from mybatis where id = #{id}
  </delete>
  
  <update id="updateMember">
  	update mybatis set
  	name = #{name},
  	phone = #{phone},
  	address = #{address}
  	where id = #{id}
  	
  </update>
</mapper>